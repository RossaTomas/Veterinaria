        </div>
        <div class="form-group">
          <label for="fecha">Fecha</label>
          <input type="date" id="fecha" name="fecha">
        </div>
      </div>
      <div class="form-group">
        <label for="descripcion">Descripci√≥n</label>
        <textarea id="descripcion" name="descripcion" rows="2" required></textarea>
      </div>
      <div class="form-group">
        <label for="resultado">Resultado</label>
        <textarea id="resultado" name="resultado" rows="2"></textarea>
      </div>
      <div class="form-group">
        <label for="archivo">Archivo (Imagen o PDF)</label>
        <input type="file" id="archivo" name="archivo" accept="image/*,.pdf">
      </div>
      <button type="submit" class="btn btn-primary">Guardar Evaluaci√≥n</button>
    </form>
  </div>

  {{#if diagnostico.evaluaciones.length}}
    <div class="evaluations-list">
      {{#each diagnostico.evaluaciones}}
        <div class="evaluation-card">
          <div class="evaluation-header">
            <h4>{{this.tipo}}</h4>
            <span class="date">{{this.fecha}}</span>
          </div>
          <p><strong>Descripci√≥n:</strong> {{this.descripcion}}</p>
          {{#if this.resultado}}
            <p><strong>Resultado:</strong> {{this.resultado}}</p>
          {{/if}}
          {{#if this.archivo}}
            <a href="{{this.archivo}}" target="_blank" class="btn btn-sm btn-info">üìÑ Ver Archivo</a>
          {{/if}}
        </div>
      {{/each}}
    </div>
  {{else}}
    <p class="empty-state">No hay evaluaciones registradas</p>
  {{/if}}
</div>

{{#if diagnostico.observaciones}}
<div class="detail-section">
  <h2>Observaciones</h2>
  <p>{{diagnostico.observaciones}}</p>
</div>
{{/if}}

<script>
function toggleForm(formId) {
  const form = document.getElementById(formId);
  form.style.display = form.style.display === 'none' ? 'block' : 'none';
}
</script>
