  </div>
</div>
{{/if}}

<div class="detail-section">
  <h2>Recomendaciones</h2>
  {{#if diagnostico.diagnosticoPrediccion.recomendaciones.length}}
    <ul class="recommendations-list">
      {{#each diagnostico.diagnosticoPrediccion.recomendaciones}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  {{/if}}
  
  {{#if diagnostico.diagnosticoPrediccion.tratamientoSugerido}}
    <div class="treatment-box">
      <h3>Tratamiento Sugerido</h3>
      <p>{{diagnostico.diagnosticoPrediccion.tratamientoSugerido}}</p>
    </div>
  {{/if}}
</div>

<div class="detail-section">
  <div class="section-header">
    <h2>Evaluaciones M√©dicas</h2>
    <button onclick="toggleForm('evaluacionForm')" class="btn btn-sm btn-primary">‚ûï Agregar Evaluaci√≥n</button>
  </div>

  <div id="evaluacionForm" class="form-card" style="display: none;">
    <form action="/diagnosticos/{{diagnostico._id}}/evaluaciones" method="POST" enctype="multipart/form-data">
      <div class="form-row">
        <div class="form-group">
          <label for="tipo">Tipo de Evaluaci√≥n</label>
          <select id="tipo" name="tipo" required>
            <option value="">Seleccionar...</option>
            <option value="Radiograf√≠a">Radiograf√≠a</option>
            <option value="Ecograf√≠a">Ecograf√≠a</option>
            <option value="An√°lisis de sangre">An√°lisis de sangre</option>
            <option value="Cirug√≠a">Cirug√≠a</option>
            <option value="Otro">Otro</option>
