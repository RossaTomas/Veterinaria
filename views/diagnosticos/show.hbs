<div class="detail-section">
  <h2>Dolencias Reportadas</h2>
  {{#if diagnostico.dolencias.length}}
    <div class="cards-grid">
      {{#each diagnostico.dolencias}}
        <div class="card">
          <h4>{{this.sintoma}}</h4>
          <p><strong>Intensidad:</strong> <span class="badge badge-{{this.intensidad}}">{{this.intensidad}}</span></p>
          {{#if this.duracion}}
