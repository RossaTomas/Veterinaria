          {{/if}}
          {{#if this.descripcion}}
            <p>{{this.descripcion}}</p>
          {{/if}}
        </div>
      {{/each}}
    </div>
  {{else}}
    <p class="empty-state">No se reportaron dolencias</p>
  {{/if}}
</div>

{{#if diagnostico.signosVitales}}
